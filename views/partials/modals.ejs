
<!-- Single Tweet Modal -->
<div class="modal fade" id="tweetModal" tabindex="-1" role="dialog" aria-labelledby="Tweet">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Tweet Details:</h4>
      </div>
      <div class="modal-body" id="tweetEmbed">
      </div>
      <div class="modal-body" id="tweetEmbedLoading">
        Loading...
      </div>
    </div>
  </div>
</div>

<!-- Data Mining Modal -->
<div class="modal fade bs-example-modal-lg" id="dataMining" tabindex="-1" role="dialog" aria-labelledby="dataMining">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Load CSV tweets</h4>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-12">
              <form>
                <div class="form-group">
                  <label for="filename">File Name (Put the file in the 'csv' folder):</label>
                  <input type="text" class="form-control" id="filename" name="filename" placeholder="example.csv" required>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button id="listTweets" type="submit" class="btn btn-default">Load IDs to Temp DB</button>
        <button id="getTweets" class="btn btn-primary">Start Data Mining</button>
      </div>
    </div>
  </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" tabindex="-1" role="dialog" id="uploadConfirmationModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Send temp data to main DB</h4>
      </div>
      <div class="modal-body">
        <p>Do you want to send the data in the Temporary Tables to the Main Database?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" data-loading-text="Cancel">Cancel</button>
        <button type="button" class="btn btn-primary" id="uploadDBConfirmed" data-loading-text="Send">Send</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->